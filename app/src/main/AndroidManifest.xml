<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.gpaengenharia" >

    <uses-sdk
        android:maxSdkVersion="21"
        android:minSdkVersion="15" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/nome_app"
        android:theme="@style/TemaGeral" >

        <!--
                Theme.Black (cx de textos com bordas, estilo web, menu some)
                Theme.Dialog (janelas reduzidas em cascata do tamanho dos UI's, menu some)
                Theme.Holo (tela cheia fundo preto com menu)
                Theme.InputMethod (tudo transparente, sÃ³ aparece os UI's)
                Theme.Leanback.FormWizard (tela cheia, design bonito, UI's mto grandes)
                Theme.Light (tela cheia, design bonito, UI's com bordas estilo web, menu some)
                Theme.Panel (idem Theme.InputMethod)
                Theme.Translucent (idem Theme.InputMethod)
                Theme.Wallpaper (idem Theme.InputMethod)
                Theme.WithActionBar (tela cheia, design bonito com menu, UI's com bordas estilo web)
        -->
        <activity
            android:name=".activities.AtvLogin"
            android:label=""
            android:theme="@style/TemaGeral.TemaLogin" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AtvTarefa"
            android:label=""
            android:theme="@style/TemaGeral.TemaTarefa" >
        </activity>
        <activity
            android:name=".activities.AtvColaborador"
            android:label="@string/title_activity_atv_colaborador"
            android:parentActivityName=".activities.AtvColaborador">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.gpaengenharia.activities.AtvBase" />
        </activity>
        <activity
            android:name=".activities.AtvAdministrador"
            android:label="@string/title_activity_atv_administrador"
            android:parentActivityName=".activities.AtvAdministrador" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.gpaengenharia.activities.AtvBase" />
        </activity>
    </application>

</manifest>